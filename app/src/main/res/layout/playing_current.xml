<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/current_settings"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/player_mode"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_width="92dp"
            android:layout_height="29dp"
            android:background="@drawable/background_capsule"
            android:backgroundTint="#F6F6F4"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/random_play"
                android:layout_marginStart="9dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="随机播放"
                android:textSize="12sp"
                android:layout_marginStart="5dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:lineSpacingExtra="0dp"
                android:gravity="center"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/check_box"
            android:layout_width="12dp"
            android:layout_height="12dp"
            app:layout_constraintTop_toBottomOf="@id/player_mode"
            app:layout_constraintStart_toStartOf="@id/player_mode"
            android:layout_marginTop="13dp"
            android:background="@drawable/background_gray_rounded"
            />

        <TextView
            android:layout_width="77dp"
            android:layout_height="17dp"
            app:layout_constraintTop_toTopOf="@id/check_box"
            app:layout_constraintBottom_toBottomOf="@id/check_box"
            app:layout_constraintStart_toEndOf="@id/check_box"
            android:text="歌单原始顺序"
            android:textSize="12sp"
            android:textColor="#86878B"
            android:layout_marginStart="7dp"
            android:gravity="center_vertical"
            />

        <ImageView
            android:id="@+id/download"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="2dp"
            android:src="@drawable/playing_download"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/charge"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="20dp"
            />

        <ImageView
            android:id="@+id/charge"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/playing_charge"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/delete"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="20dp"
            />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="1dp"
            android:src="@drawable/playing_delete"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="20dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/current_songs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/current_settings"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>