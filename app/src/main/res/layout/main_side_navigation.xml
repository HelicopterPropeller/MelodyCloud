<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:layout_gravity="start"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/side_navigation_title"
        layout="@layout/side_navigation_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/side_navigation_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/setting"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="23dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/vip_card_container"
                layout="@layout/side_navigation_vip" />

            <LinearLayout
                android:id="@+id/couple_space"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/background_curved_rounded"
                android:backgroundTint="@color/content">

                <ImageView
                    android:id="@+id/couple_space_icon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/side_navigation_couple"
                    android:padding="4dp"
                    />

                <TextView
                    android:id="@+id/couple_space_name"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:text="双人空间"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:includeFontPadding="true"
                    android:layout_marginStart="4dp"
                    />

                <TextView
                    android:id="@+id/couple_space_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="超多人都在玩"
                    android:textSize="10sp"
                    android:textColor="#858585"
                    android:gravity="end"
                    />

            </LinearLayout>

            <include
                android:id="@+id/content_container"
                layout="@layout/side_navigation_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/setting"
        android:layout_width="106dp"
        android:layout_height="41dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/background_curved_rounded"
        android:backgroundTint="@color/content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="28dp"
        android:paddingEnd="28dp">

        <ImageView
            android:id="@+id/setting_icon"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:src="@drawable/side_navigation_setting"
            android:padding="1dp"
            />

        <TextView
            android:id="@+id/setting_name"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="设置"
            android:textSize="13dp"
            android:textStyle="bold"
            android:layout_marginStart="3dp"
            android:includeFontPadding="false"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/more"
        android:layout_width="106dp"
        android:layout_height="41dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/background_curved_rounded"
        android:backgroundTint="@color/content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="28dp"
        android:paddingEnd="28dp">

        <ImageView
            android:id="@+id/more_icon"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:src="@drawable/side_navigation_more"
            android:padding="3dp"
            />

        <TextView
            android:id="@+id/more_name"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="更多"
            android:textSize="13dp"
            android:textStyle="bold"
            android:layout_marginStart="3dp"
            android:includeFontPadding="false"
            android:gravity="center"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>