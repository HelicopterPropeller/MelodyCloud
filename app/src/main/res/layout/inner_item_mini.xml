<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="75dp"
    android:layout_height="75dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/mini_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_rounded"
        android:backgroundTint="@color/content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        />
    
    <TextView
        android:id="@+id/mini_title"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/background_order_gradient"
        android:text="OK Computer"
        android:textColor="@color/common_text_color"
        android:textSize="11dp"
        android:fontFamily="sans-serif-black"
        android:paddingTop="5dp"
        android:paddingStart="6dp"
        android:paddingEnd="5dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:shadowColor="#CC000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="1"
        />

    <TextView
        android:id="@+id/mini_type"
        android:layout_width="26dp"
        android:layout_height="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/background_capsule"
        android:backgroundTint="#601E1E1E"
        android:text="歌单"
        android:textSize="10sp"
        android:textColor="@color/common_text_color"
        android:gravity="center"
        android:includeFontPadding="false"
        android:shadowColor="#CC000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="1"
        />

</androidx.constraintlayout.widget.ConstraintLayout>