<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="165dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/comment_cover"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/background_rounded"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:shadowColor="#CC000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/music_times_icon"
        android:layout_width="14dp"
        android:layout_height="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="7dp"
        android:layout_marginStart="7dp"
        android:src="@drawable/recommend_headphones"
        android:elevation="8dp"
        android:translationZ="4dp"
        />

    <TextView
        android:id="@+id/music_times_val"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_marginStart="1dp"
        android:fontFamily="sans-serif-black"
        android:gravity="top"
        android:includeFontPadding="false"
        android:text="230.0亿"
        android:textColor="@color/common_text_color"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/music_times_icon"
        app:layout_constraintStart_toEndOf="@id/music_times_icon"
        app:layout_constraintTop_toTopOf="@id/music_times_icon" />

    <TextView
        android:id="@+id/comment_title"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="9dp"
        android:fontFamily="sans-serif-medium"
        android:shadowColor="#CC000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="4"
        android:text="私人雷达"
        android:textColor="@color/common_text_color"
        android:textSize="14sp"
        android:textStyle="bold"
        android:lineSpacingExtra="3dp"
        app:layout_constraintBottom_toBottomOf="@id/comment_cover"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/comment_play"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/recommend_play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/comment_cover"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        />

    <TextView
        android:id="@+id/comment_introduce"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/comment_cover"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/background_rounded"
        android:backgroundTint="@android:color/transparent"
        android:text="今天从《温室花朵》听起"
        android:textSize="13dp"
        android:lineSpacingExtra="2dp"
        android:padding="3dp"
        android:maxLines="2"
        android:ellipsize="end"
        />

</androidx.constraintlayout.widget.ConstraintLayout>