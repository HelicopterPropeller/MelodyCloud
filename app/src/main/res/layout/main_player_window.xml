<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@drawable/background_player_window">

    <ImageView
        android:id="@+id/player_window_record"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/player_window_record"
        android:background="@drawable/background_circle"
        android:clipToOutline="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/player_window_cover"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:adjustViewBounds="true"
        android:background="@drawable/background_circle"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/player_window_record"
        app:layout_constraintEnd_toEndOf="@id/player_window_record"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:text="Serenade from String Quartet in F Major, Op. 3,No. 5 - Lazar Gosman"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintEnd_toStartOf="@id/player_window_play_or_pause"
        app:layout_constraintStart_toEndOf="@id/player_window_record"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/player_window_play_or_pause"
        android:layout_width="34dp"
        android:layout_height="match_parent"
        android:padding="13dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:src="@drawable/player_window_play"
        app:layout_constraintEnd_toStartOf="@id/player_window_playlist"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/circular_progress_indicator"
        android:layout_width="34dp"
        android:layout_height="wrap_content"
        app:indicatorSize="22dp"
        app:trackThickness="1.5dp"
        app:indicatorColor="@color/black"
        app:trackColor="#858585"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        app:layout_constraintStart_toStartOf="@id/player_window_play_or_pause"
        app:layout_constraintEnd_toEndOf="@id/player_window_play_or_pause"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/player_window_playlist"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="14dp"
        android:padding="10dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:src="@drawable/player_window_playlist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>