<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.example.neteasecloudmusic.ui.widget.InnerViewPagerContainer
        android:layout_width="match_parent"
        android:layout_height="163dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/carousel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </com.example.neteasecloudmusic.ui.widget.InnerViewPagerContainer>

    <com.example.neteasecloudmusic.ui.widget.DotView
        android:id="@+id/dot_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="6dp"
        android:layout_width="87dp"
        android:layout_height="19dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/left_dot"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:src="@drawable/dot"
            android:layout_marginStart="20dp"
            android:padding="1.5dp"
            />
        <ImageView
            android:id="@+id/left_second_dot"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:src="@drawable/dot"
            android:padding="0.5dp"
            />
        <ImageView
            android:id="@+id/left_mid_dot"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:src="@drawable/dot"
            />
        <ImageView
            android:id="@+id/right_mid_dot"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:src="@drawable/dot"
            />
        <ImageView
            android:id="@+id/right_second_dot"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:src="@drawable/dot"
            android:padding="0.5dp"
            />
        <ImageView
            android:id="@+id/right_dot"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:src="@drawable/dot"
            android:layout_marginEnd="20dp"
            android:padding="1.5dp"
            />
    </com.example.neteasecloudmusic.ui.widget.DotView>
</androidx.constraintlayout.widget.ConstraintLayout>