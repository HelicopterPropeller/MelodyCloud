<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_curved_rounded"
    android:backgroundTint="@color/content"
    android:clipToPadding="false"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/message_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/side_navigation_message"
            android:padding="4dp"
            />

        <TextView
            android:id="@+id/message_name"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:text="我的消息"
            android:textSize="13sp"
            android:textStyle="bold"
            android:gravity="center"
            android:includeFontPadding="true"
            android:layout_marginStart="4dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/shell"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shell_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/side_navigation_shell"
            android:padding="4dp"
            />

        <TextView
            android:id="@+id/shell_name"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:text="我的云贝"
            android:textSize="13sp"
            android:textStyle="bold"
            android:gravity="center"
            android:includeFontPadding="true"
            android:layout_marginStart="4dp"
            />

        <TextView
            android:id="@+id/shell_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="你有300云贝待领取"
            android:textSize="10sp"
            android:textColor="#858585"
            android:gravity="end"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dressing_center"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dressing_center_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/side_navigation_dressing"
            android:padding="3dp"
            />

        <TextView
            android:id="@+id/dressing_center_name"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:text="装扮中心"
            android:textSize="13sp"
            android:textStyle="bold"
            android:gravity="center"
            android:includeFontPadding="true"
            android:layout_marginStart="4dp"
            />

        <TextView
            android:id="@+id/dressing_center_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="守护甜心装扮"
            android:textSize="10sp"
            android:textColor="#858585"
            android:gravity="end"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/creator_center"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/creator_center_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/side_navigation_creator"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/creator_center_name"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:text="创作者中心"
            android:textSize="13sp"
            android:textStyle="bold"
            android:gravity="center"
            android:includeFontPadding="true"
            android:layout_marginStart="4dp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#50858585"
        />

    <LinearLayout
        android:id="@+id/recently_played"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/recently_played_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/side_navigation_recently"
            android:padding="6dp"
            />

        <TextView
            android:id="@+id/recently_played_name"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:text="最近播放"
            android:textSize="13sp"
            android:textStyle="bold"
            android:gravity="center"
            android:includeFontPadding="true"
            android:layout_marginStart="4dp"
            />

        <TextView
            android:id="@+id/recently_played_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7台设备登录"
            android:textSize="10sp"
            android:textColor="#858585"
            android:gravity="end"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/scheduled_playback"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <ImageView
            android:id="@+id/scheduled_playback_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="5dp"
            android:src="@drawable/side_navigation_scheduled" />

        <TextView
            android:id="@+id/scheduled_playback_name"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginStart="4dp"
            android:gravity="center"
            android:includeFontPadding="true"
            android:text="定时关闭"
            android:textSize="13sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#50858585"
        />

    <LinearLayout
        android:id="@+id/mall"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mall_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/side_navigation_mall"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/mall_name"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:text="商城"
            android:textSize="13sp"
            android:textStyle="bold"
            android:gravity="center"
            android:includeFontPadding="true"
            android:layout_marginStart="4dp"
            />

        <TextView
            android:id="@+id/mall_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="艺人专辑周边上新中"
            android:textSize="10sp"
            android:textColor="#858585"
            android:gravity="end"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ticket_office"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ticket_office_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/side_navigation_ticket"
            android:padding="4dp"
            />

        <TextView
            android:id="@+id/ticket_office_name"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:text="云村有票"
            android:textSize="13sp"
            android:textStyle="bold"
            android:gravity="center"
            android:includeFontPadding="true"
            android:layout_marginStart="4dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/recommend_songs"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/recommend_songs_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/side_navigation_recommend"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/recommend_songs_name"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:text="云推歌"
            android:textSize="13sp"
            android:textStyle="bold"
            android:gravity="center"
            android:includeFontPadding="true"
            android:layout_marginStart="4dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/customer_service"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/customer_service_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/side_navigation_service"
            android:padding="4dp"
            />

        <TextView
            android:id="@+id/customer_service_name"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:text="我的客服"
            android:textSize="13sp"
            android:textStyle="bold"
            android:gravity="center"
            android:includeFontPadding="true"
            android:layout_marginStart="4dp"
            />

    </LinearLayout>
</LinearLayout>