<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.mine.MineMusicFragment"
    android:background="@color/background">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginEnd="66dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="15dp"
        android:background="@color/background"
        app:tabIndicatorHeight="0dp"
        app:tabMode="fixed"
        app:tabRippleColor="@android:color/transparent"
        />

    <ImageView
        android:id="@+id/output"
        android:layout_width="19dp"
        android:layout_height="19dp"
        app:layout_constraintStart_toEndOf="@id/tab_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tab_layout"
        android:layout_marginStart="1dp"
        android:src="@drawable/mine_output"
        />

    <ImageView
        android:id="@+id/more"
        android:layout_width="19dp"
        android:layout_height="19dp"
        app:layout_constraintStart_toEndOf="@id/output"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tab_layout"
        android:layout_marginStart="10dp"
        android:src="@drawable/mine_expand"
        />

    <com.example.neteasecloudmusic.ui.widget.InnerViewPagerContainer
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tab_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/mine_music_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </com.example.neteasecloudmusic.ui.widget.InnerViewPagerContainer>

</androidx.constraintlayout.widget.ConstraintLayout>