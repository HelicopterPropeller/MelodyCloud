<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/record"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="21dp"
        android:src="@drawable/player_window_record"
        android:background="@drawable/background_rounded"
        android:clipToOutline="true"
        />

    <ImageView
        android:id="@+id/cover"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="13dp"
        android:src="@drawable/example_mine_inner_item"
        android:background="@drawable/background_rounded"
        android:clipToOutline="true"
        />

    <ImageView
        android:id="@+id/special_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="13dp"
        android:src="@drawable/recommend_heart"
        android:padding="14dp"
        android:background="@drawable/background_rounded"
        android:clipToOutline="true"
        android:backgroundTint="#30303030"
        app:tint="@color/common_text_color"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/cover"
        android:layout_marginTop="12dp"
        android:layout_marginStart="13dp"
        android:text="我喜欢的音乐"
        android:textSize="14sp"
        android:textStyle="bold"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/information"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toEndOf="@id/cover"
        android:layout_marginTop="6dp"
        android:layout_marginStart="13dp"
        android:text="55首·7932次播放"
        android:textSize="12sp"
        android:textColor="#7E8386"
        android:ellipsize="end"
        />
    
    <LinearLayout
        android:id="@+id/favorite_button"
        android:layout_width="80dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/background_capsule"
        android:backgroundTint="#C9C8CD"
        android:visibility="gone">
        
        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/recommend_heartbeat"
            android:layout_marginStart="10dp"
            app:tint="@color/netease_red" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:text="心动模式"
            android:textSize="11sp"
            android:layout_marginStart="2dp"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    
    <ImageView
        android:id="@+id/inner_expand"
        android:layout_width="19dp"
        android:layout_height="19dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        android:src="@drawable/mine_expand"
        app:tint="#7E8386" />

</androidx.constraintlayout.widget.ConstraintLayout>