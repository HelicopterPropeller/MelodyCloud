<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="88dp"
    android:layout_height="127dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/music_cover"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/background_rounded"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        />

    <ImageView
        android:id="@+id/music_times_icon"
        android:layout_width="14dp"
        android:layout_height="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginStart="6dp"
        android:src="@drawable/recommend_headphones"
        />

    <TextView
        android:id="@+id/music_times_val"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_marginStart="1dp"
        android:fontFamily="sans-serif-black"
        android:gravity="top"
        android:text="230.0亿"
        android:textColor="@color/common_text_color"
        android:textSize="11sp"
        android:includeFontPadding="false"
        android:shadowColor="#CC000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="1"
        app:layout_constraintBottom_toBottomOf="@id/music_times_icon"
        app:layout_constraintStart_toEndOf="@id/music_times_icon"
        app:layout_constraintTop_toTopOf="@id/music_times_icon" />

    <ImageView
        android:id="@+id/music_play"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/recommend_play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/music_cover"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        />

    <TextView
        android:id="@+id/music_introduce"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingStart="2dp"
        android:paddingTop="6dp"
        android:paddingEnd="4dp"
        android:text="万圣节真的不装了！隐藏人格启动"
        android:textSize="13sp"
        android:lineSpacingExtra="2dp"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/music_cover" />


</androidx.constraintlayout.widget.ConstraintLayout>