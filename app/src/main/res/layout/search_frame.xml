<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:background="@drawable/background_capsule"
    android:backgroundTint="@color/search_frame_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/top_title_search"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/title_search"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="14dp"
        />

    <TextView
        android:id="@+id/search_frame_content"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:text="Pink Floyd"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/top_title_search"
        app:layout_constraintEnd_toStartOf="@id/top_title_scan"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        />

    <ImageView
        android:id="@+id/top_title_scan"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/title_scan"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="14dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>